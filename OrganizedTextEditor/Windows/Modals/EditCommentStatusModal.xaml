<Window x:Class="OrganizedTextEditor.Windows.Modals.EditCommentStatusModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrganizedTextEditor.Windows.Modals"
        mc:Ignorable="d"
        Title="EditCommentStatusModal" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    <StackPanel HorizontalAlignment="Left" Margin="10">
        <Label Content="Comment Status" />
        <TextBox x:Name="tagNameTextBox" Width="200" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button x:Name="cancelButton" Content="Cancel" Padding="5" Margin="5" />
            <Button x:Name="saveButton" Content="Save" Padding="5" Margin="5" />

        </StackPanel>
    </StackPanel>
</Window>
